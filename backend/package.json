{
  "name": "backend",
  "version": "1.0.0",
  "description": "Totalizer backend",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --watch",
    "start": "cd dist && nodemon src/server.js",
    "start:dev": "npm-run-all --parallel build:dev start",
    "lint": "./node_modules/.bin/eslint .",
    "test": "ts-mocha -p tsconfig.json --timeout 10000 tests/**/*test.ts --reporter dot --exit",
    "test:dev": "ts-mocha -p tsconfig.json ./tests/*/**test.ts --timeout 10000 -w --watch-extensions ts --reporter dot",
    "coverage": "nyc --extension=.ts --reporter=lcov --reporter=html npm run test"
  },
  "author": "Tomas Volkevicius",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-wrap": "^1.0.0",
    "html-entities": "^2.3.0",
    "jsonschema": "^1.4.0",
    "mongoose": "^5.12.2",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "supertest": "^6.1.3",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
