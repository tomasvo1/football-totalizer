{
	"compilerOptions": {
		"types": [
			"node"
		],
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"declaration": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./index.d.ts"
		]
	},
	"exclude": [
		"tests",
		"dist"
	]
}